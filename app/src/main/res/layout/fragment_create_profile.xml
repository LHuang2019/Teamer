<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".CreateProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Create Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="41dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="36sp"/>
        <TableLayout
                android:layout_width="395dp"
                android:layout_height="317dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tableLayout">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="Username: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        android:textSize="20sp"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="Gaming Platforms:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView3"
                        android:textSize="20sp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <CheckBox
                        android:text="PC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_PC_checkbox"/>
                <CheckBox
                        android:text="PS4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_PS4_checkbox"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <CheckBox
                        android:text="XBOX ONE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_XBOX_ONE_checkbox"/>
                <CheckBox
                        android:text="Nintendo Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_Switch_checkbox"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Add Games:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView4"
                        android:textSize="20sp"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <CheckBox
                        android:text="CS:GO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/checkBox8"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <CheckBox
                        android:text="Apex Legends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/checkBox9"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <CheckBox
                        android:text="Rocket League"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/checkBox10"/>
            </TableRow>
        </TableLayout>
        <Button
                android:text="Done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_create_profile_btn" android:layout_marginTop="89dp"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>