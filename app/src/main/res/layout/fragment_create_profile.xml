<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.CreateProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/f_create_profile_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_create_profile_title_tv" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="36sp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout"/>
        <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/f_create_profile_title_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tableLayout"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/f_create_profile_done_btn"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="@string/f_create_profile_username_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_username_tv"
                        android:textSize="20sp"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/f_create_profile_username_et"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:text="@string/f_view_profile_platform_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_platform_tv"
                        android:textSize="20sp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <CheckBox
                        android:text="@string/gaming_platform_pc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_pc_cb"/>
                <CheckBox
                        android:text="@string/gaming_platform_ps4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_ps4_cb"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <CheckBox
                        android:text="@string/gaming_platform_xboxone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_xbox_cb"/>
                <CheckBox
                        android:text="@string/gaming_platform_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_switch_cb"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="@string/f_create_profile_game_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_game_title_tv"
                        android:textSize="20sp"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <CheckBox
                        android:text="@string/game_csgo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_csgo_cb"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <CheckBox
                        android:text="@string/game_apex_legends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_apex_legends_cb"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <CheckBox
                        android:text="@string/game_rocket_league"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_rocket_league_cb"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="@string/f_create_profile_location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_location_tv"
                        android:textSize="16sp"/>
                <CheckBox
                        android:text="@string/f_create_profile_location_cb"
                        android:layout_width="152dp"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_location_cb"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="@string/f_create_profile_placeholder_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_placeholder_tv"/>
                <CheckBox
                        android:text="@string/f_create_profile_update_loc_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/f_create_profile_update_loc_cb"/>
            </TableRow>
        </TableLayout>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_create_profile_done_btn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:text="@string/f_create_profile_done_btn"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>