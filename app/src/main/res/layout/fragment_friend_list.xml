<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".FriendListFragment">
    <Button
            android:text="@string/f_friend_list_discover_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f_friend_list_discover_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/f_friend_list_profile_btn" android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/friendlist_recycler_view"/>
    <Button
            android:text="@string/f_friend_list_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f_friend_list_profile_btn" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/f_friend_list_discover_btn"
            android:layout_marginStart="32dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/f_friend_list_discover_btn"
            android:id="@+id/friendlist_recycler_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>