<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".view.ViewProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/f_view_profile_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_view_profile_username_tv"
                android:textSize="40sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/f_view_profile_platform_title_tv"
                android:textAlignment="center"/>
        <TextView
                android:text="@string/f_view_profile_platform_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/f_view_profile_platform_title_tv"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/f_view_profile_username_tv"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="24sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/f_view_profile_platform_list_tv"
                android:textAlignment="center"/>
        <TextView
                android:text="@string/f_view_profile_platform_list_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_view_profile_platform_list_tv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/f_view_profile_platform_title_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textSize="20sp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/f_view_profile_game_title_tv" android:textAlignment="center"/>
        <TextView
                android:text="@string/f_view_profile_game_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_view_profile_game_title_tv"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/f_view_profile_platform_list_tv"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/f_view_profile_game_list_tv" android:textAlignment="center"/>
        <TextView
                android:text="@string/f_view_profile_game_list_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_view_profile_game_list_tv"
                android:textSize="20sp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/f_view_profile_game_title_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/f_view_profile_edit_profile_btn"
                android:textAlignment="center"/>
        <Button
                android:text="@string/f_view_profile_edit_profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_view_profile_edit_profile_btn"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/f_view_profile_game_list_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>